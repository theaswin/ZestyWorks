<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
	<record id="brand_details_form" model="ir.ui.view">
				<field name="name">brand details form</field>
				<field name="model">brand.details</field>
				<field name="arch" type="xml">
					<form>
					<group>	
							
					<field name="name" string="Name"/>
					<field name="code" />
					</group>
							
					</form>
				</field>
			</record>			
		 <record id="brand_details_tree" model="ir.ui.view">
			<field name="name">brand details tree</field>
			<field name="model">brand.details</field>
			<field name="arch" type="xml">
				<tree >
					<field name="name"/>
					<field name="code"/>
				</tree>			
			</field>
			</record> 
			
			       
			
			<record id="action_for_brand_details" model="ir.actions.act_window">
			<field name="name">Brand</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">brand.details</field>
			<field name="view_mode">tree,form</field>
			<field name="context"></field>
			<field name="help" type="html">
				<p>Brand</p>
			</field>
		</record>	
		</data>
</odoo>
		